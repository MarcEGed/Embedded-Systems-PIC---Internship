#include <18F46K22.h>
#fuses INTRC_IO, NOWDT, NOLVP, NOPROTECT
#use delay(clock=16MHz)
#use rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7)

#include "vec2.h"
#include "display.h"
#include "entities.h"

void main() {
    display_init();

    Enemy e = {{0, 0}, 1};
    
    while(TRUE){
        e = display_move_enemy(e);

        if (enemy.pos.x >= (128 - 8)){
            break;
        }
    }

    while (TRUE);
}
