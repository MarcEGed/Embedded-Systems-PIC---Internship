{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with ccsc",
            "type": "shell",
            "command": "ccsc.exe",
            "args": [
            "+FH",
            "+STDOUT",
            "BUILD=space_invaders.ccspjt"],
            "options": {
                "cwd": "${workspaceFolder}/src/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}